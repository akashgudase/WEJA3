package com.jspiders.jdbc.operation;

import java.sql.SQLException;
import java.util.Scanner;

public class StudentMain {

	public static void main(String[] args) throws ClassNotFoundException, SQLException {

		StudentJDBC jdbc = new StudentJDBC();
		Scanner scanner = new Scanner(System.in);

		System.out.println("Enter 1 to add student.\nEnter 2 to get all students.\nEnter 3 to get student by id.");
		int choice = scanner.nextInt();
		switch (choice) {
		case 1:
			Student student = new Student();
			System.out.println("Enter student id.");
			student.setId(scanner.nextInt());
			scanner.nextLine();
			System.out.println("Enter student name.");
			student.setName(scanner.nextLine());
			System.out.println("Enter student email.");
			student.setEmail(scanner.nextLine());
			System.out.println("Enter student age.");
			student.setAge(scanner.nextInt());
			System.out.println("Enter student fees.");
			student.setFees(scanner.nextDouble());
			scanner.close();
			jdbc.addStudent(student);
			break;
		case 2:
			jdbc.getAllStudents();
			break;
		case 3:
			System.out.println("Enter student id.");
			int id = scanner.nextInt();
			jdbc.getStudentById(id);
			break;
		default:
			System.out.println("Invalid choice.");
		}

	}

}
